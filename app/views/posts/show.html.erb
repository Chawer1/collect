<h1><%= @post.title %></h1>
<h2><%= @post.topic %></h2>
<p><%= @post.summary %></p>
<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %>

<section class="post-body">
  <%= image_tag @post.image.url(:large), class: 'img-show' if @post.image? %>
</section>
<br>

<p></p>